<Window x:Class="Projekt___Kryptografia.keyPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt___Kryptografia"
        mc:Ignorable="d"
        Title="VigenereCrypt 2.0" Height="200" Width="200">
    <Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock>Enter key: </TextBlock>

			<TextBox Name="telephoneNumber" Margin="10,10" Width="150"  Foreground="LightGray" GotMouseCapture="textBox_Click" Text="Enter key here!" />
			<Button Content="Confirm" Click="Button_Click" />
		</StackPanel>
		
		
	</Grid>
</Window>
